{
  "buffer_font_family": "Hack Nerd Font",
  "buffer_font_size": 16,
  "ui_font_family": "Hack Nerd Font",
  "ui_font_size": 16,
  "theme": "Gruvbox Dark Hard",
  "indent_guides": {
    "background_coloring": "indent_aware",
  },
  "relative_line_numbers": "enabled",
  "inlay_hints": {
    "enabled": true,
  },
  "vim_mode": true,
  "collaboration_panel": {
    "button": false,
  },
  "chat_panel": {
    "button": "never",
  },
  "notification_panel": {
    "button": false,
  },
  "toolbar": {
    "quick_actions": false,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "format_on_save": "off",
}
